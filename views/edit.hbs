<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    <form id="formAddhotel" action="/edit/{{currentHotel._id}}" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="hotel" value="{{currentHotel.hotel}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{currentHotel.city}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="freeRooms" value="{{currentHotel.freeRooms}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl"
            value="{{currentHotel.imgUrl}}">

        <input type="submit" class="create" value="Add">
    </form>
</section>